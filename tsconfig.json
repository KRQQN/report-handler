{
  "compilerOptions": {
    "target": "ES2018",
    "resolveJsonModule": true,   
    "resolvePackageJsonImports": true,
    "module": "NodeNext",                             
    "declaration": false,        
    "emitDeclarationOnly": false,              
    "outDir": "./dist",      
    "esModuleInterop": true,            
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
  }
}
